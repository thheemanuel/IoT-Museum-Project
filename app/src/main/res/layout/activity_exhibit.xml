<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true">

    <Button
        android:id="@+id/artistButton"
        android:layout_width="150dp"
        android:layout_height="106dp"
        android:layout_marginStart="32dp"
        android:layout_marginBottom="141dp"
        android:background="@drawable/rounded_corners"
        android:backgroundTint="#5E3333"
        android:elevation="0dp"
        android:fontFamily="@font/arbutusslab_regular"
        android:text="Artist"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/exhibit_back_button"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/historyButton"
        android:layout_width="150dp"
        android:layout_height="106dp"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="141dp"
        android:background="@drawable/rounded_corners"
        android:backgroundTint="#5E3333"
        android:elevation="0dp"
        android:fontFamily="@font/arbutusslab_regular"
        android:text="History"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/exhibit_back_button"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/descButton"
        android:layout_width="150dp"
        android:layout_height="106dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/rounded_corners"
        android:backgroundTint="#5E3333"
        android:elevation="0dp"
        android:fontFamily="@font/arbutusslab_regular"
        android:text="Description"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/artistButton" />

    <Button
        android:id="@+id/similarButton"
        android:layout_width="150dp"
        android:layout_height="106dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="32dp"
        android:background="@drawable/rounded_corners"
        android:backgroundTint="#5E3333"
        android:elevation="0dp"
        android:fontFamily="@font/arbutusslab_regular"
        android:hapticFeedbackEnabled="true"
        android:text="Similar\nExhibits"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/historyButton" />

    <androidx.cardview.widget.CardView
        android:id="@+id/imageCard"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_marginTop="50dp"
        android:elevation="15dp"
        android:visibility="visible"
        app:cardElevation="20dp"
        app:cardMaxElevation="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:visibility="visible">

        <ImageView
            android:id="@+id/exhibitImage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="0dp"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="0dp"
            android:hapticFeedbackEnabled="true"
            android:soundEffectsEnabled="false"
            android:src="@drawable/ic_launcher_foreground"
            app:layout_constraintBottom_toTopOf="@+id/exhibitTitle"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:srcCompat="@tools:sample/avatars" />
    </androidx.cardview.widget.CardView>


    <TextView
        android:id="@+id/exhibitTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="144dp"
        android:layout_marginTop="13dp"
        android:layout_marginEnd="145dp"
        android:fontFamily="@font/arbutusslab_regular"
        android:text="Mona Lisa"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageCard" />

    <TextView
        android:id="@+id/exhibitArtist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="161dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="161dp"
        android:fontFamily="@font/arbutusslab_regular"
        android:text="Leonardo da Vinci"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/exhibitTitle" />

    <Button
        android:id="@+id/exhibit_back_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="34dp"
        android:layout_marginTop="385dp"
        android:layout_marginEnd="289dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/small_buttons_roundedcorners"
        android:backgroundTint="#FE897F"
        android:fontFamily="@font/arbutusslab_regular"
        android:text="BACK"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/exhibitImage" />

    <TextView
        android:id="@+id/exhibitYear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="150dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="150dp"
        android:fontFamily="@font/arbutusslab_regular"
        android:text="1503"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/exhibitArtist" />


    <androidx.cardview.widget.CardView
        android:id="@+id/infoCard"
        android:layout_width="383dp"
        android:layout_height="628dp"
        android:elevation="40dp"
        android:visibility="invisible"
        app:cardElevation="25dp"
        app:cardMaxElevation="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:visibility="invisible">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:forceHasOverlappingRendering="false"
            android:padding="4dp">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/exitInfo"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginStart="72dp"
                android:layout_marginEnd="5dp"
                android:backgroundTint="#FB4646"
                app:icon="@drawable/close"
                app:iconGravity="top"
                app:iconSize="32dp"
                app:iconTint="#FFFFFF"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.992"
                app:layout_constraintStart_toStartOf="parent"
                tools:layout_editor_absoluteY="1dp" />

            <TextView
                android:id="@+id/title"
                style="@style/TextAppearance.MaterialComponents.Headline3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="60dp"
                android:fontFamily="@font/arbutusslab_regular"
                android:text="Description"
                android:textSize="30sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                tools:ignore="MissingConstraints"
                tools:layout_editor_absoluteY="5dp" />

            <TextView
                android:id="@+id/body"
                style="@style/TextAppearance.MaterialComponents.Body1"
                android:layout_width="356dp"
                android:layout_height="542dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="2dp"
                android:elevation="500dp"
                android:fontFamily="@font/arbutusslab_regular"
                android:text="The title of the painting, which is known in English as Mona Lisa, is based on the presumption that it depicts Lisa del Giocondo, although her likeness is uncertain. Renaissance art historian Giorgio Vasari wrote that &quot;Leonardo undertook to paint, for Francesco del Giocondo, the portrait of Mona Lisa, his wife.&quot;[17][18][19] Monna in Italian is a polite form of address originating as ma donnaâ€”similar to Ma'am, Madam, or my lady in English. This became madonna, and its contraction monna. The title of the painting, though traditionally spelled Mona in English, is spelled in Italian as Monna Lisa (mona being a vulgarity in Italian), but this is rare in English.[20][21]  Lisa del Giocondo was a member of the Gherardini family of Florence and Tuscany, and the wife of wealthy Florentine silk merchant Francesco del Giocondo.[22] The painting is thought to have been commissioned for their new home, and to celebrate the birth of their second son, Andrea.[23] The Italian name for the painting, La Gioconda, means 'jocund' ('happy' or 'jovial') or, literally, 'the jocund one', a pun on the feminine form of Lisa's married name, Giocondo.[22][24] In French, the title La Joconde has the same meaning. "
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/title" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>